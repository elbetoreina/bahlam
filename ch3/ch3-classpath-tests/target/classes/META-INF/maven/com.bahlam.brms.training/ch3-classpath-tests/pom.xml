<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.bahlam.brms.training</groupId>
		<artifactId>ch3</artifactId>
		<version>1.0.0</version>
	</parent>
	<artifactId>ch3-classpath-tests</artifactId>
	<name>ch3-classpath-tests</name>
	<description>Classpath Tests Using Drools</description>
	<dependencies>
		<!-- Start dependencies for the other Kie Modules -->
		<dependency>
			<groupId>com.bahlam.brms.training</groupId>
			<artifactId>ch3-kjar-simple-discounts</artifactId>
			<version>1.0.0</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.bahlam.brms.training</groupId>
			<artifactId>ch3-kjar-premium-discounts</artifactId>
			<version>1.0.0</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.bahlam.brms.training</groupId>
			<artifactId>ch3-kjar-parent</artifactId>
			<version>1.0.0</version>
			<scope>test</scope>
		</dependency>
		<!-- End dependencies for the other Kie Modules -->
		<dependency>
			<groupId>com.bahlam.brms.training</groupId>
			<artifactId>ch3-model</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.bahlam.brms.training</groupId>
			<artifactId>ch3-utils</artifactId>
			<version>1.0.0</version>
			<type>jar</type>			
		</dependency>
		<dependency>
			<groupId>org.kie</groupId>
			<artifactId>kie-api</artifactId>
			<version>6.5.0.Final</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.drools</groupId>
			<artifactId>drools-compiler</artifactId>
			<version>6.5.0.Final</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.drools</groupId>
			<artifactId>drools-core</artifactId>
			<version>6.5.0.Final</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.hamcrest</groupId>
			<artifactId>hamcrest-library</artifactId>
			<version>1.3</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-core</artifactId>
			<version>2.7.22</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.6.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>